{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands/index.js",
    "@adonisjs/repl/build/commands",
    "@adonisjs/lucid/build/commands",
    "@adonisjs/mail/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts",
    "Tests": "tests"
  },
  "namespaces": {
    "models": "App/Modules",
    "validators": "App/Modules",
    "httpControllers": "App/Modules"
  },
  "preloads": ["./start/routes", "./start/kernel", "./start/mail"],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/drive-s3",
    "@adonisjs/lucid",
    "@adonisjs/auth",
    "adonis5-jwt",
    "@adonisjs/mail",
    "@adonisjs/view"
  ],
  "aceProviders": ["@adonisjs/repl"],
  "metaFiles": [
    {
      "pattern": "resources/views/**/*.edge",
      "reloadServer": false
    }
  ],
  "tests": {
    "suites": [
      {
        "name": "functional",
        "files": ["app/Modules/**/Tests/**/*.spec(.ts|.js)", "tests/functional/**/*.spec(.ts|.js)"],
        "timeout": 60000
      }
    ]
  },
  "testProviders": ["@japa/preset-adonis/TestsProvider"]
}
